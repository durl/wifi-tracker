#!/usr/bin/python
"""Wifi Tracker.

Usage:
    {basename} sniff <interface> [options]
    {basename} -h | --help
    {basename} --version

Options:
    -h --help       Show help.
    --debug         Print debugging messages.

Commands:
    sniff           Sniff probe requests sent by devices in your area.
"""

from __future__ import print_function
import logging

from docopt import docopt
from wifitracker import sniffer, __version__

log = logging.getLogger(__name__)

if __name__ == "__main__":
    # parse commandline options:
    args = docopt(__doc__.format(basename=__file__), version=__version__)
    if args['--debug']:
        logging.getLogger().setLevel(logging.DEBUG)
    log.debug(args)

    # execute command:
    if args['sniff']:
        sniffer.sniff(iface=args['interface'])
